{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames":true,
    "skipLibCheck": true,
    "esModuleInterop": true,  
    "strictNullChecks": true 
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "typeRoots": [
    "./typings",
    "./node_modules/@types/"
  ]
}